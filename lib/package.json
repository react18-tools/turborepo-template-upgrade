{
  "name": "turborepo-template-upgrade",
  "author": "Mayank Kumar Chaudhari (https://mayank-chaudhari.vercel.app)",
  "private": false,
  "version": "0.6.2",
  "description": "Upgrade projects based on a Turborepo template using selective git diffs, with support for ignore paths and skipped packages.",
  "license": "MPL-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "github:react18-tools/turborepo-template-upgrade",
  "bugs": "https://github.com/react18-tools/turborepo-template-upgrade/issues",
  "homepage": "https://github.com/react18-tools/turborepo-template-upgrade/#readme",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "bin": {
    "turborepo-template-upgrade": "./dist/cli.mjs",
    "turborepo-template-sync": "./dist/sync.mjs",
    "tt-sync": "./dist/sync.mjs",
    "tt-upgrade": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig-build.json && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch && tsc -p tsconfig-build.json -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild-plugin-rdi": "^0.0.0",
    "esbuild-plugin-react18": "0.2.6",
    "esbuild-plugin-react18-css": "^0.0.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/react18-tools"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "turborepo",
    "template",
    "upgrade",
    "cli",
    "codemod",
    "git",
    "patch",
    "monorepo",
    "react",
    "react18",
    "react19",
    "nextjs",
    "nextjs14",
    "nextjs15",
    "frontend",
    "modern",
    "react-server-components",
    "ui-components",
    "web-development",
    "progressive",
    "integration",
    "customizable",
    "compatible",
    "mayank1513"
  ],
  "dependencies": {
    "git-json-resolver": "^1.3.6",
    "git-json-resolver-semver": "^1.0.0"
  }
}
